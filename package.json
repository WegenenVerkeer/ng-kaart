{
  "name": "ng-kaart",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve testApp --port 4220 --disable-host-check --host 0.0.0.0 --base-href '/ng-kaart/'",
    "start-apigateway": "ng serve testApp --port 4220 --public-host https://apigateway/ --deploy-url https://apigateway/ng-kaart/ --base-href /ng-kaart --disable-host-check --host 0.0.0.0 --serve-path '/ng-kaart'",
    "start-wc-apigateway": "ng serve webcomponent --port 4220 --public-host http://apigateway/ --deploy-url http://apigateway/ng-kaart/ --base-href /ng-kaart --disable-host-check --host 0.0.0.0 --serve-path '/ng-kaart'",
    "watch": "ng build --watch",
    "preclean": "npm install rimraf mkdirp",
    "clean": "rimraf out; rimraf dist; mkdirp out",
    "build": "npm install && npm prune && ng build && cp -R src/workbox dist/ng-kaart",
    "pretest": "npm install && npm prune",
    "test": "ng test ng-kaart --watch=false --code-coverage --browsers=ChromeHeadlessNoSandbox",
    "test-debug": "karma start karma.conf.js --watch=true --browsers=PhantomJS --debug",
    "build-test-app": "npm run clean && npm install && npm prune && ng build && ng build testApp --base-href /ng-kaart --deploy-url /ng-kaart/",
    "lint": "ng lint",
    "lint-fix": "ng lint --fix",
    "e2e": "ng e2e",
    "cypress": "cypress open",
    "start:e2e": "ng serve testApp --port 4221",
    "cy:run": "CYPRESS_baseUrl=http://localhost:4221/ cypress run",
    "cy:e2e": "start-server-and-test start:e2e http-get://localhost:4221/ cy:run",
    "publishToNexus": "node script/patchRegistry.js https://collab.mow.vlaanderen.be/artifacts/repository/npm-internal/",
    "publishToNpmjs": "node script/patchRegistry.js",
    "build:elements": "ng build --prod --output-hashing none webcomponent && npm run generate-docs && node script/elements-build.js",
    "compodoc": "compodoc",
    "generate-docs": "compodoc projects/ng-kaart/src/lib/classic -c projects/ng-kaart/.compodocrc.json -d ./dist/webcomponent/documentation -p projects/ng-kaart/tsconfig.lib.json",
    "serve-docs": "compodoc -s projects/ng-kaart/tsconfig.lib.json"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "tslint --project src/tsconfig.app.json --fix",
        "awk /apps-(dev|tei).mow.vlaanderen.be/{exit(1)}",
        "git add"
      ],
      "projects/ng-kaart/**/*.ts": [
        "tslint --project projects/ng-kaart/tsconfig.lib.json --fix",
        "awk /apps-(dev|tei).mow.vlaanderen.be/{exit(1)}",
        "git add"
      ]
    },
    "ignore": [
      "**/test.ts"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "7.1.2",
    "@angular/cdk": "^7.1.1",
    "@angular/common": "7.1.2",
    "@angular/compiler": "7.1.2",
    "@angular/core": "7.1.2",
    "@angular/elements": "^7.1.2",
    "@angular/forms": "7.1.2",
    "@angular/http": "7.1.2",
    "@angular/material": "^7.1.1",
    "@angular/platform-browser": "7.1.2",
    "@angular/platform-browser-dynamic": "7.1.2",
    "@angular/router": "7.1.2",
    "@angular/service-worker": "7.1.2",
    "core-js": "2.6.9",
    "document-register-element": "^1.7.2",
    "drag-drop-touch": "1.3.0",
    "fp-ts": "^1.19.5",
    "hammerjs": "2.0.8",
    "idb": "3.0.2",
    "loglevel": "1.6.1",
    "luxon": "^1.17.2",
    "material-design-icons": "3.0.1",
    "mobile-detect": "1.4.3",
    "monocle-ts": "^1.7.2",
    "motion-sensors-polyfill": "^0.3.1",
    "mustache": "3.0.1",
    "newtype-ts": "0.2.3",
    "ng4-click-outside": "1.0.1",
    "openlayers": "^4.6.5",
    "proj4": "2.5.0",
    "resize-observer": "1.0.0",
    "rxjs": "^6.5.2",
    "scroll-into-view-if-needed": "2.2.20",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.2",
    "@angular-devkit/build-ng-packagr": "^0.11.2",
    "@angular/cli": "7.1.2",
    "@angular/compiler-cli": "^7.1.2",
    "@angular/language-service": "^7.1.2",
    "@compodoc/compodoc": "^1.1.9",
    "@types/googlemaps": "3.30.16",
    "@types/hammerjs": "2.0.36",
    "@types/jasmine-jquery": "1.5.33",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/loglevel": "1.5.3",
    "@types/luxon": "^1.15.2",
    "@types/mocha": "^5.2.5",
    "@types/mustache": "0.8.32",
    "@types/node": "~8.9.4",
    "@types/openlayers": "^4.6.17",
    "codelyzer": "~4.5.0",
    "concat": "^1.0.3",
    "copy-webpack-plugin": "4.6.0",
    "cypress": "^3.1.3",
    "fs-extra": "^7.0.1",
    "glob": "7.1.3",
    "husky": "^1.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-jquery": "2.1.1",
    "jasmine-reporters": "2.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-intl-shim": "1.0.3",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "1.2.0",
    "karma-mocha-reporter": "2.2.4",
    "karma-phantomjs-launcher": "1.0.4",
    "lint-staged": "^8.1.0",
    "mkdirp": "^0.5.1",
    "ng-packagr": "^4.4.5",
    "prettier": "1.15.3",
    "protractor": "~5.4.0",
    "protractor-console": "3.0.0",
    "protractor-console-plugin": "0.1.1",
    "protractor-http-mock": "0.9.2",
    "protractor-jasmine2-screenshot-reporter": "0.4.0",
    "request": "^2.88.0",
    "request-promise-native": "1.0.5",
    "rimraf": "^2.6.3",
    "start-server-and-test": "^1.7.11",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-defocus": "2.0.6",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "~3.2.4",
    "webdriver-manager": "^12.1.6",
    "webpack-dev-server": "^3.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
